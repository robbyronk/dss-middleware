<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
 version="2.0">
  
	<persistence-unit name="databaseTest" >
		<jta-data-source>java:/jdbc/siebelTestDS</jta-data-source>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<class>org.cru.dss.middle.localcontent.ContentItem</class>
		<class>org.cru.dss.middle.localcontent.WebImage</class>
		<class>org.cru.dss.middle.entity.DesignationEntity</class>
		<class>org.cru.dss.middle.entity.AccountEntity</class>
		<class>org.cru.dss.middle.entity.DesignationExtensionEntity</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.use_sql_comments" value="true" />
		</properties>
	</persistence-unit>
</persistence>